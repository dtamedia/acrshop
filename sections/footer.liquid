    { "type": "@app" }
  ],
  "settings": [
    { "id": "image_logo_image", "type": "image_picker", "label": "Logo Image" },
    { "id": "text_acr_text", "type": "text", "label": "ACR Text", "default": "ACR Traunstein" },
    { "id": "text_anfahrt", "type": "text", "label": "Anfahrt", "default": "Anfahrt: Chiemseestr. 38, 83278 Traunstein" },
    { "id": "text_telefon", "type": "text", "label": "Telefon", "default": "Tel: +49 (0)861 90991199" },
    { "id": "text_e_mail", "type": "text", "label": "E-Mail", "default": "E-Mail: info@soundupgrade-bayern.de" },

    { "id": "text_schnellmenu_text", "type": "text", "label": "Schnellmenü Text", "default": "Schnellmenü" },
    { "id": "url_link_start", "type": "url", "label": "Link Start" },
    { "id": "text_start", "type": "text", "label": "Start", "default": "Start" },
    { "id": "url_link_soundupgrades", "type": "url", "label": "Link Soundupgrades" },
    { "id": "text_soundupgrades", "type": "text", "label": "Soundupgrades", "default": "Soundupgrades" },
    { "id": "url_einzelkomponenten_link", "type": "url", "label": "Einzelkomponenten Link" },
    { "id": "text_einzelkompontenten", "type": "text", "label": "Einzelkompontenten", "default": "Einzelkomponenten" },
    { "id": "url_link_soundupgrade_bayern", "type": "url", "label": "Link Soundupgrade Bayern" },
    { "id": "text_soundupgrade_bayern", "type": "text", "label": "Soundupgrade Bayern", "default": "Soundupgrade Bayern" },

    { "id": "text_social_media_heading", "type": "text", "label": "Social Media Heading", "default": "Social Media" },
    { "id": "url_link_instagram", "type": "url", "label": "Link Instagram" },
    { "id": "url_link_facebook", "type": "url", "label": "Link Facebook" },
    { "id": "url_link_youtube", "type": "url", "label": "Link Youtube" },

    { "id": "text_bezahlmoglichkeiten_heading", "type": "text", "label": "Bezahlmöglichkeiten Heading", "default": "Bezahlmöglichkeiten" },

    { "id": "url_impressum_link", "type": "url", "label": "Impressum Link" },
    { "id": "text_impressum", "type": "text", "label": "Impressum", "default": "Impressum" },
    { "id": "url_datenschutz_link", "type": "url", "label": "Datenschutz Link" },
    { "id": "text_datenschutz", "type": "text", "label": "Datenschutz", "default": "Datenschutz" },
    { "id": "url_agb_link", "type": "url", "label": "AGB Link" },
    { "id": "text_agb", "type": "text", "label": "AGB", "default": "AGB" },
    { "id": "url_ruckgabe_link", "type": "url", "label": "Rückgabe Link" },
    { "id": "text_ruckgabe", "type": "text", "label": "Rückgabe", "default": "Rückgabe" }
  ],
  "presets": [
    {
      "name": "footer",
      "category": "Liquify",
      "blocks": [
        { "type": "bezahlmoglichkeit-logo" }
      ]
    }
  ]
}
{% endschema %}
